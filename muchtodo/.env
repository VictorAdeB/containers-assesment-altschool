# --- Application ---
PORT=8080

# --- Database ---
# Connects to Docker MongoDB container internally
MONGO_URI=mongodb://mongodb:27017
DB_NAME=much_todo_db

# --- Authentication ---
JWT_SECRET_KEY="your-super-secret-key-that-is-long-and-random"
JWT_EXPIRATION_HOURS=72

# --- Caching ---
ENABLE_CACHE=false

# --- Logging ---
LOG_LEVEL="DEBUG"
LOG_FORMAT="json"
